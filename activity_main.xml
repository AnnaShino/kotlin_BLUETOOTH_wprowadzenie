<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">
    <!--Informacja dla uzytkownika-->
    <TextView
        android:id="@+id/statusBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:gravity="center_horizontal" />
    <!--Ikona Bluetooth-->
    <ImageView
        android:id="@+id/imageviewBT"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_bluetoothoff"/>
    <!--Przycisk 'On'-->
    <Button
        android:id ="@+id/turnOnBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Włącz"
        android:minWidth="200dp"/>
    <!--Przycisk 'Off'-->
    <Button
        android:id ="@+id/turnOffBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Wyłącz"
        android:minWidth="200dp"/>
    <!--Wykrywalność urządzenia-->
    <Button
        android:id ="@+id/wykrywalnoscBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Urządzenie widoczne"
        android:minWidth="200dp"/>
    <!--Pobieranie listy urządzeń parowalnych-->
    <Button
        android:id ="@+id/parowanieBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Sparowanie"
        android:minWidth="200dp"/>
    <!--Pokazanie listy urządzeń parowalnych-->
    <TextView
        android:id="@+id/textviewBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:padding="5dp"/>

</LinearLayout>
